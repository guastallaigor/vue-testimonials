{
  "name": "vue-testimonials",
  "version": "0.2.0",
  "description": "Vue Testimonials is a Vue 3 testimonials component made with Vite and TypeScript",
  "homepage": "https://github.com/guastallaigor/vue-testimonials#readme",
  "author": {
    "name": "Igor Guastalla de Lima",
    "email": "limaguastallaigor@gmail.com"
  },
  "main": "./dist/vue-testimonials.umd.js",
  "module": "./dist/vue-testimonials.es.js",
  "unpkg": "dist/vue-testimonials.umd.js",
  "cdn": "dist/vue-testimonials.umd.js",
  "jsdelivr": "dist/vue-testimonials.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "vetur"
  ],
  "private": false,
  "license": "MIT",
  "bugs": "https://github.com/guastallaigor/vue-testimonials/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/guastallaigor/vue-testimonials"
  },
  "vetur": {
    "tags": "vetur/tags.json",
    "attributes": "vetur/attributes.json"
  },
  "keywords": [
    "vue-testimonials",
    "testimonials",
    "vite",
    "vue",
    "vue3",
    "vuejs",
    "typescript",
    "vue-components",
    "ui",
    "framework"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint:eslint": "eslint lib/**/*.{ts,vue}",
    "lint:prettier": "prettier -w -u lib/**/*.{ts,vue}",
    "prepare": "husky install",
    "test": "jest --clearCache && jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "vue": "^3.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addons": "^6.3.8",
    "@storybook/theming": "^6.3.8",
    "@storybook/vue3": "^6.3.8",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@vitejs/plugin-vue": "^1.9.2",
    "@vue/compiler-sfc": "^3.2.19",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "next",
    "@vue/vue3-jest": "^27.0.0-alpha.1",
    "clean-css": "^5.2.0",
    "commitizen": "^4.2.4",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.18.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "storybook-builder-vite": "^0.1.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "vite": "^2.6.1",
    "vite-svg-loader": "^2.2.0",
    "vue-eslint-parser": "^7.11.0",
    "vue-loader": "^16.8.1",
    "vue-tsc": "^0.3.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0,
        "never",
        "sentence-case"
      ],
      "subject-full-stop": [
        0,
        "never",
        "."
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
